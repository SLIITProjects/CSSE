<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/other"
    tools:context=".InitLoan">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/edit_reg"
            android:layout_width="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_height="wrap_content"
            android:text="REGISTRATION SUCCESSFULLY! "
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_light"
            />
        <TextView
            android:id="@+id/edit_txt"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:text="Now, you have to go TIXORA available communication near by you and, get a smart card giving your card number we have provided. "
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:layout_margin="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edit_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.Get a secure PIN number for your smart card by pressing GENERATE PIN button."
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_sign_in_background"
            android:text="GENERATE PIN"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/edit_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="2.Please enter the verification code you have received to you mobile."
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="14dp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="OTP"
            android:inputType="text"
            android:text=""
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="18sp"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true" />

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_sign_in_background"
            android:text="VERIFY"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>